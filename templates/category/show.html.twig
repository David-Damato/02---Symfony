{% extends 'base.html.twig' %}
{% block title %}Catégories
{% endblock %}

{% block body %}

	{% for program in programs %}

		<h1>Toutes les séries
			{{program.category.name}}
			:
		</h1>


		<div>
			<h2>{{ loop.index }}
				/
				{{ program.title }}
				- Catégorie :
				{{ program.category.name }}</h2>
			<p>{{ program.summary }}</p>
			{# Lien vers la fiche de la série : #}
			<a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
		</div>
	{% endfor %}

	<a href="{{ path('program_index') }}">
		Retour à la liste des programmes
	</a>

{% endblock %}
